<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:CognitiveServicesSpeechTest.ViewModels"
    x:Class="CognitiveServicesSpeechTest.Views.ServicesSpeechView"
>
    <ContentView.BindingContext>
        <viewmodels:ServicesSpeechViewModel />
    </ContentView.BindingContext>
    <StackLayout>
        <Button Text="Enable Microphonet" Command="{Binding EnableMicrophonetCommand}" />
        <Button Text="Text To Speech Once" Command="{Binding TextToSpeechCommand}" />

        <Button Text="Speech To Text Once" Command="{Binding SpeechToTextOnceCommand}" />
        <Button Text="Speech To Text Continuous" Command="{Binding SpeechToTextContinuousCommand}" />

        <Button Text="Speech To Text With Keyword Once"
            Command="{Binding SpeecToTexthWithKeywordOnceCommand}" />

        <Button Text="Speech To Text With Keyword Continuous"
            Command="{Binding SpeechToTextWithKeywordContinuousCommand}" />


    </StackLayout>

</ContentView>